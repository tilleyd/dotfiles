# dunst config
# Where : $XDG_CONFIG_HOME/dunstrc
# Author: Duncan Tilley

[global]
    font = "Source Sans Pro 11"
    allow_markup = yes
    format = "<b>%s</b>\n\n%b"
    sort = yes
    indicate_hidden = yes
    alignment = center
    bounce_freq = 0
    show_age_threshold = 60
    word_wrap = yes
    ignore_newline = no
    geometry = "300x8+0+30"
    transparency = 0
    idle_threshold = 120
    monitor = 0
    follow = mouse
    sticky_history = yes
    line_height = 0
    separator_height = 2
    padding = 8
    horizontal_padding = 8
    separator_color = "#1e1f26"
    startup_notification = false

[frame]
    width = 2
    color = "#5294e2"

[shortcuts]
    close = ctrl+space
    close_all = ctrl+shift+space
    history = ctrl+grave
    context = ctrl+shift+period

[urgency_low]
    background = "#282a33"
    foreground = "#e8e8e8"
    timeout = 5

[urgency_normal]
    background = "#282a33"
    foreground = "#e8e8e8"
    timeout = 20

[urgency_critical]
    background = "#282a33"
    foreground = "#e8e8e8"
    timeout = 0

