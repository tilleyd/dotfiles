{
    "workbench.startupEditor": "newUntitledFile",
    "workbench.iconTheme": "material-icon-theme",
    "editor.fontFamily": "'Hack','Font Awesome 5 Free Regular','Font Awesome 5 Free Solid','Font Awesome 5 Brands Regular'",
    "editor.fontSize": 13,
    "editor.minimap.enabled": true,
    "editor.minimap.renderCharacters": false,
    "editor.minimap.maxColumn": 80,
    "editor.dragAndDrop": false,
    "editor.rulers": [
        {"column": 80},
        {"column": 120},
    ],
    "editor.cursorSmoothCaretAnimation": false,
    "editor.smoothScrolling": true,
    "editor.acceptSuggestionOnEnter": "off",
    "workspaceExplorer.workspaceStorageDirectory": "/home/tilleyd/Documents/Workspaces",
    "autoDocstring.docstringFormat": "google",
    "python.formatting.provider": "black",
    "git.ignoreMissingGitWarning": true,
    "window.menuBarVisibility": "hidden",
    "files.insertFinalNewline": true,
    "files.trimTrailingWhitespace": true,
    "files.trimFinalNewlines": true,
    "jupyter.sendSelectionToInteractiveWindow": false,
    "python.showStartPage": false,
    "workbench.editor.untitled.hint": "hidden",
    "workbench.editorAssociations": {
        "*.ipynb": "jupyter-notebook"
    },
    "notebook.cellToolbarLocation": {
        "default": "right",
        "jupyter-notebook": "left"
    },
    "cmake.configureOnOpen": false,
    "workbench.tree.indent": 16,
    "vim.easymotion": true,
    "vim.useSystemClipboard": true,
    "window.restoreWindows": "none",
    "extensions.ignoreRecommendations": true,
    "latex-workshop.view.pdf.viewer": "tab",
    "diffEditor.ignoreTrimWhitespace": false,
    "jupyter.askForKernelRestart": false,
    "files.watcherExclude": {
        "**/.bloop": true,
        "**/.metals": true,
        "**/.ammonite": true
    },
    "editor.scrollbar.horizontal": "hidden",
    "editor.scrollbar.vertical": "hidden",
    "editor.scrollbar.verticalScrollbarSize": 0,
    "editor.minimap.showSlider": "always",

    // Colour theme
    "workbench.colorTheme": "Default Light+", // Use as basis
    "editor.tokenColorCustomizations": {
        "comments": "#a7a7a7",
        "functions": "#8614c9",
        "keywords": "#00469b",
        "numbers": "#ca8b01",
        "strings": "#357a00",
        "types": "#c91e38",
        "variables": "#3e4044",
        "textMateRules": []
