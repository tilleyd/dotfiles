ramp-coreload-7-foreground = ${colors.red}


[module/temperature]
type = internal/temperature
interval = 1
warn-temperature = 80
units = true
label = %temperature-c:4%
label-warn = %temperature-c:4%
label-warn-foreground = ${colors.red}
format =  <label>
format-warn =  <label-warn>
format-background = ${colors.darker}
format-foreground = ${colors.magenta}


[module/date]
type = internal/date
date = %a %d %b
time = %H:%M:%S
label = %date% %time%
format =  <label>
format-background = ${colors.darker}
format-foreground = ${colors.blue}


[module/memory]
type = internal/memory
interval = 2
label = %percentage_used:2%% %percentage_swap_used:2%%
format =  <label>
format-background = ${colors.darker}
format-foreground = ${colors.green}


[module/mpd]
type = internal/mpd
format-online = <icon-prev> <icon-stop> <toggle> <icon-next>  <icon-repeat> <icon-random>  <bar-progress> <label-time>  <label-song>

icon-play = 
icon-pause = 
icon-stop = 
icon-prev = 
icon-next = 
icon-random = 
icon-repeat = 

toggle-on-foreground =
toggle-off-foreground = #55

bar-progress-width = 20
bar-progress-format = %{A4:mpdseek+2: A5:mpdseek-2:}%fill%%indicator%%empty%%{A A}
bar-progress-indicator = |
bar-progress-indicator-foreground = #e8e8e8
bar-progress-indicator-font = 3
bar-progress-fill = ─
bar-progress-fill-foreground = #bb
bar-progress-fill-font = 3
bar-progress-empty = ─
bar-progress-empty-font = 3
bar-progress-empty-foreground = #44


[module/window-title]
type = internal/xwindow
label = %title:0:80:…%
label-foreground = ${colors.foreground}


[module/wireless-network]
type = internal/network
interface = wlo1
interval = 2
ping-interval = 10

label-connected = ↓%downspeed% ↑%upspeed%
label-disconnected = disconnected
label-connected-foreground = ${colors.magenta}
label-disconnected-foreground = ${colors.magenta}

ramp-signal-0 = 
ramp-signal-0-foreground = ${colors.red}
ramp-signal-1 = 
ramp-signal-1-foreground = ${colors.green}
ramp-signal-2 = 
ramp-signal-2-foreground = ${colors.green}

format-connected = <ramp-signal> <label-connected>
format-disconnected =  <label-disconnected>
format-connected-background = ${colors.darker}
format-disconnected-background = ${colors.darker}


[module/volume]
type = internal/pulseaudio
use-ui-max = false  # scale to 100%, not 150%

label-volume = %percentage:3%%
# For some reason the muted label completely ignores formatting,
# so this is as good as it gets.
label-muted =  muted
label-muted-foreground = ${colors.green}
label-muted-background = ${colors.darker}

ramp-volume-0 = 
ramp-volume-1 = 
ramp-volume-2 = 
format-volume = <ramp-volume> <label-volume>
format-volume-background = ${colors.darker}
format-volume-foreground = ${colors.green}
click-right = pavucontrol


[module/bspwm]
type = internal/bspwm
format = <label-state>
format-padding = 0
label-focused = " %name% "
label-focused-foreground = ${colors.magenta}
label-focused-background = ${colors.darker}
label-focused-underline = ${colors.green}
label-occupied = " %name% "
label-occupied-foreground = ${colors.magenta}
label-occupied-background = ${colors.darker}
label-occupied-underline = ${colors.light}
label-urgent = " %name% "
label-urgent-foreground = ${colors.background}
label-urgent-background = ${colors.yellow}
label-empty = " %name% "
label-empty-foreground = ${colors.magenta}
label-empty-background = ${colors.darker}
# If true, show only this monitor's desktops
pin-workspaces = false
