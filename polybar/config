[colors]
background       = #282c34
foreground       = #e8e8e8
darker           = #141a1f
dark             = #1a2128
light            = #6b859e
lighter          = #a6b5c5
red              = #ff9191
green            = #9acd68
yellow           = #eda55d
blue             = #7dbeff
magenta          = #cb96ff
cyan             = #6ecfcf


[global/wm]
margin-top = 0
margin-bottom = 32


[bar/base]
#monitor = ${env:MONITOR:eDP-1}
bottom = true
wm-restack = bspwm
width = 100%
height = 32

background = ${colors.background}
foreground = ${colors.foreground}

line-color = ${colors.blue}
overline-size = 2
underline-size = 4

padding-right = 0
padding-left = 0
module-margin-left = 0
module-margin-right = 0

tray-position = right
tray-detached = false
tray-maxsize = 12
tray-background = ${colors.darker}

font-0 = Hack:size=10;0
font-1 = Siji:style=Regular:size=12;0

pseudo-transparency = false


[settings]
# module fallbacks
format-margin = 0
format-padding = 2


[bar/default]
inherit = bar/base
modules-left = bspwm window-title
#modules-center = bspwm
modules-right = wireless-network cpu memory temperature backlight volume battery date


[module/backlight]
type = internal/backlight
card = intel_backlight
use-actual-brightness = true
label = %percentage:3%%

format =  <label>
format-foreground = ${colors.blue}
format-background = ${colors.darker}


[module/battery]
type = internal/battery

battery = BAT1
adapter = ADP1
full-at = 100

label-charging = %percentage%%
label-discharging = %percentage%% %time%
label-full = %percentage%%

#label-charging-foreground = #e8e8e8
#label-discharging-foreground = #e8e8e8
#label-full-foreground = #e8e8e8

ramp-capacity-0 = 
ramp-capacity-0-foreground = ${colors.red}
ramp-capacity-1 = 
ramp-capacity-1-foreground = ${colors.yellow}
ramp-capacity-2 = 
ramp-capacity-2-foreground = ${colors.magenta}

format-charging =  <label-charging>
format-discharging = <ramp-capacity> <label-discharging>
format-full =  <label-full>

format-charging-foreground = ${colors.magenta}
format-discharging-foreground = ${colors.magenta}
format-full-foreground = ${colors.magenta}
format-charging-background = ${colors.darker}
format-discharging-background = ${colors.darker}
format-full-background = ${colors.darker}



[module/cpu]
type = internal/cpu
interval = 0.5
label = %percentage:3%%
#format =  <label> <ramp-coreload>
